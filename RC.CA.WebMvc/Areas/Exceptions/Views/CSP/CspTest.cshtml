    <script src="~/js/rc.site.js" asp-append-version="true"></script>
    <script src="~/js/rc.list.js" asp-append-version="true"></script>
</body>
<script nonce="@TempData["nonce"]">
    $( "#clickEvt" ).bind( "click", function() {
        alert( "User click" );
    });
</script>

<script>
    $( "#clickEvt1" ).bind( "click", function() {
        alert( "User click should be BLOCKED nonce" );
    });
</script>

<style nonce="@TempData["nonce"]">
    .red
    {
        color:red;
    }
</style>
