@model RC.CA.Application.Dto.Authentication.LoginRequest
<section class="vh-50" style="background-color:;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img
                src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form"
                class="img-fluid" style="border-radius: 1rem 0 0 1rem;"
              />
            </div>
            <div class="col-md-6 col-lg-7 d-flex ">
              <div class="card-body p-4 p-lg-5 text-black">
                <form method="post" asp-area="Account" asp-controller="UserAccount" asp-action="Login">
                    <input asp-for="ReturnUrlX" type="input" style="display:none;" />

                  <h5 class="h3 mb-3 pb-3" style="letter-spacing: 1px;">Login (sample@sample.com)</h5>
                  
                  
                  
                  <div class="form-outline mb-4">
                    <label asp-for="UserEmail" class="form-label">User email</label>
                    <input asp-for="UserEmail" class="form-control form-control-md" autocomplete="useremail" aria-required="true" />
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                  </div>
                  
                  <div class="form-outline mb-4">
                    <label asp-for="Password" class="form-label">Password (P@ssword123!@@)</label>
                    <input asp-for="Password" class="form-control form-control-md" aria-required="true" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                  <div class="row form-check mb-4">
                        <div class="col-4">
                            <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                            <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                        </div>
                  </div>
                  <div class="pt-1 mb-4">
                    <button type="submit" data-spinning-button class="btn btn-primary">
                        Login
                   </button>
                  </div>
                  <div asp-validation-summary="All" class="text-danger"></div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>