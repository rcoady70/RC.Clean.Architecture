@{
    ViewData["Title"] = "Home Page";
}

  <div class="px-4 pt-5 my-5 text-center">
    <h1 class="display-4 fw-bold">Sample .net core 6 site c#</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">Site is built to learn, test, try new technologies and techniques.  </p>
      <p class="lead mb-4">Site is made up of mvc site communicating with webapi site.</p>
    </div>
    <div class="overflow-hidden" style="max-height: 30vh;">
      <a href="https://github.com/rcoady70/RC.Clean.Architecture">Git-hub link to project</a><br />
      <a href="https://rc-ca-webapi.azurewebsites.net/swagger/index.html">Swagger API site</a><br />
      <a href="https://rc-ca-healthchecks.azurewebsites.net">Health checks site</a>
    </div>
  </div>


  <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm border-primary">
