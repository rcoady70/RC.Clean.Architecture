@using Microsoft.AspNetCore.Identity
@using RC.CA.Infrastructure.Persistence.Identity


<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Account" asp-controller="UserAccount" asp-action="Register">Register</a>
    </li>
@if(!User.Identity.IsAuthenticated) 
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Account" asp-controller="UserAccount" asp-action="Login" asp-route-returnUrl="@Context.Request.Path">Login</a>
    </li>
}
else
{
     <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello(@User.Identity.Name)</a>
    </li>
      <li class="nav-item">
        <form id="logoutForm" class="form-inline" method="post" asp-area="Account" asp-controller="UserAccount" asp-action="Logout">
            <button id="logout" data-spinning-button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
</ul>
