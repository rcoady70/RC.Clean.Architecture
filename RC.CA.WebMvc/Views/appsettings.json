  //
  "SecurityHeaders": {
    "Csp": "connect-src 'self' ws: https:; object-src 'self'; script-src 'self' 'nonce-{nonce}' cdn.jsdelivr.net cdnjs.cloudflare.com cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' cdn.jsdelivr.net cdnjs.cloudflare.com;",
